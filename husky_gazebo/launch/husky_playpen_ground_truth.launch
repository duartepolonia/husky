<?xml version="1.0"?>
<launch>

    <!-- Arguments -->
    <arg name="laser_enabled" default="false"/>
    <arg name="kinect_enabled" default="false"/>
    <arg name="ur5_enabled" default="false"/>  <!-- Added new -->
    <arg name="simulation" default="simulation"/>  <!-- Added new -->
    <arg name="robot_id" default="/"/>

    <!-- Launches the Husky Robot on Gazebo and Initializes the Robot's controller -->
    <include file="$(find husky_gazebo)/launch/spawn_husky_ground_truth.launch">
        <arg name="robot_id" value="$(arg robot_id)"/>
        <arg name="laser_enabled" value="$(arg laser_enabled)"/>
        <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
        <arg name="ur5_enabled" value="$(arg ur5_enabled)"/>           <!-- Added new -->
        <arg name="simulation" value="$(arg simulation)"/>         <!-- Added new -->
    </include>

    <!-- Launches the Simulation Environment -->
    <include file="$(find husky_gazebo)/launch/playpen.launch" />

</launch>
