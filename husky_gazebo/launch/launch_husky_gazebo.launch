<launch>
  <arg name="laser_enabled" default="true"/>
  <arg name="kinect_enabled" default="false"/>
  <arg name="ur5_enabled" default="false"/>  <!-- Added new -->
  <arg name="simulation" default="simulation"/>  <!-- Added new -->
  <arg name="odometry" value="false"/>  <!-- Added new -->
  <arg name="ground_truth" value="true" unless="$(arg odometry)"/>  <!-- Added new -->
  <arg name="robot_id" default="/"/>


  <group if="$(arg odometry)">
  	<include file="$(find husky_gazebo)/launch/husky_playpen.launch">
        </include>
  </group>

  <group if="$(arg ground_truth)">
  	<include file="$(find husky_gazebo)/launch/husky_playpen_ground_truth.launch">
  		<arg name="robot_id" value="$(arg robot_id)"/>
        </include>
  </group>
</launch>
